
FROM node:22-alpine

WORKDIR /app

# Copiar package files
COPY package*.json ./

# Instalar dependencias
RUN npm ci --only=production

# Copiar código fuente
COPY . .

# Construir aplicación
RUN npm run build

# Exponer puertos
EXPOSE 3000 3001

# Comando de inicio
CMD ["npm", "run", "start:production"]
